  <h1>Locations</h1>
<div class="hero-unit">


  <table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
  <th>Name</th>
   <th>Exit West</th>
   <th>Exit North</th>
   <th>Exit East</th>
   <th>Exit South</th>
   <th>Options</th>
  </tr>
  </thead>
  <tbody>
  <%
  for (var p in locations) { %>

    <tr>
    <td><strong><%=p%></strong></td>
    <td><%=locations[p].exits['west']%></td>
    <td><%=locations[p].exits['north']%></td>
    <td><%=locations[p].exits['east']%></td>
    <td><%=locations[p].exits['south']%></td>
    <td>
    <a title="view" class="icon-eye-open" href="/locations/<%=locations[p].name %>"></a>
    <a title="edit" class="icon-pencil" href="/locations/<%=locations[p].name %>/edit"></a>
    <a title="remove" class="icon-remove" href="/locations/<%=locations[p].name %>/remove"></a>
    </td>
    </tr>
  <% } %>

  </tbody>
  </table>

<a class="btn btn-primary" href="/locations/add">Add Location</a>
</div>

